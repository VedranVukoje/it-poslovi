{% block java_script %}
    <script type="text/javascript">
        ;(function($){
        
            $(function(){
                 $('#grid-table').DataTable({
                    "processing": true,
                    "serverSide": true,
                    "pageLength": 10,
                    "ajax":"{{ path('ajax_archive_type_of_job') }}",
                    "columns": [
                        { "data": "id" },
                        { "data": "name" },
                        { "data": "status" }
                    ]
                });
                
            });
            
        }(jQuery));
    </script>
{% endblock %}